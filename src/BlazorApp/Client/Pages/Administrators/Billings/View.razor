@page "/administrator/billings/{billingId}"
@using BlazorApp.Shared.Billing

@inject HttpClient Http

<h3>View</h3>

@if (BillingInfo != null)
{
    <div>
        @BillingInfo.BillingNumber
    </div>
}

@code {

    [Parameter]
    public string BillingId { get; set; }

    Billing BillingInfo { get; set; }


    protected override async Task OnInitializedAsync()
    {
        await GetBilling(BillingId);
    }

    async Task GetBilling(string billingId)
    {
        try
        {
            var result = await Http.GetFromJsonAsync<Billing>($"/api/billing/{billingId}");

            BillingInfo = result;
        }
        catch (Exception ex)
        {

        }
    }
}
